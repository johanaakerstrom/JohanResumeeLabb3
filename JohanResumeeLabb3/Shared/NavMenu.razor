<nav class="navbar navbar-expand-md navbar-dark bg-black mb-4 position-fixed container-fluid">
    <div class="container-fluid">
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse align-items-center @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mt-2 mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="Resumee">
                        <span class="text-white"></span>
                    </NavLink>
                </li>
            </ul>
            <div class="d-flex justify-content-center align-items-center flex-grow-1">
                <img src="Images/Johan Resumee4.png" alt="Din bild" style="height: 70px;">
            </div>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
